<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tsu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestSignupActivity">

    <TextView
        android:id="@+id/tsu_tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Sign Up to BapPlusPlus"
        android:textColor="@color/colorOrange1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tsu_til_name"
        app:layout_constraintStart_toStartOf="@+id/tsu_til_pw1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tsu_til_name"
        style="@style/EditTextStyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:theme="@style/EditTextStyle1"
        app:hintTextColor="@color/colorOrange1"
        app:layout_constraintBottom_toTopOf="@+id/tsu_til_email"
        app:layout_constraintEnd_toEndOf="@+id/tsu_til_pw1"
        app:layout_constraintStart_toStartOf="@+id/tsu_til_pw1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tsu_til_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NAME"
            android:textColorLink="@color/colorOrange1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tsu_til_email"
        style="@style/EditTextStyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:theme="@style/EditTextStyle1"
        app:hintTextColor="@color/colorOrange1"
        app:layout_constraintBottom_toTopOf="@+id/tsu_til_pw1"
        app:layout_constraintEnd_toEndOf="@+id/tsu_til_pw1"
        app:layout_constraintStart_toStartOf="@+id/tsu_til_pw1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tsu_til_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-MAIL"
            android:textColorLink="@color/colorOrange1" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/tsu_btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_oragne_temp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="REGISTER"
        android:textColor="@color/colorWhite1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tsu_til_pw2"
        app:layout_constraintTop_toBottomOf="@+id/tsu_til_pw2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tsu_til_pw2"
        style="@style/EditTextStyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/EditTextStyle1"
        app:hintTextColor="@color/colorOrange1"
        app:layout_constraintEnd_toEndOf="@+id/tsu_til_pw1"
        app:layout_constraintStart_toStartOf="@+id/tsu_til_pw1"
        app:layout_constraintTop_toBottomOf="@+id/tsu_til_pw1"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tsu_til_pw2_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm PW"
            android:inputType="textPassword"
            android:textColorLink="@color/colorOrange1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tsu_til_pw1"
        style="@style/EditTextStyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:theme="@style/EditTextStyle1"
        app:hintTextColor="@color/colorOrange1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tsu_til_pw1_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PW"
            android:inputType="textPassword"
            android:textColorLink="@color/colorOrange1" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>