<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bn4c_const"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/bn4c_btn_delete"
        style="@android:style/Widget.Material.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="삭제"
        android:textColor="@color/colorRed1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bn4c_tv_myreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="내가 쓴 리뷰"
        android:textColor="@color/colorOrange2Primary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bn4c_tv_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bn4c_tv_rating" />

    <ImageView
        android:id="@+id/bn4c_img_one"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn4c_tv_rating"
        app:srcCompat="@mipmap/ic_temp2_foreground" />

    <TextView
        android:id="@+id/bn4c_tv_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="@+id/bn4c_tv_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bn4c_tv_order"
        app:layout_constraintTop_toTopOf="@+id/bn4c_tv_order" />

    <TextView
        android:id="@+id/bn4c_tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Order"
        android:textColor="@color/colorOrange2Dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn4c_img_one" />

    <TextView
        android:id="@+id/bn4c_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="8"
        android:text="Content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn4c_tv_order" />

    <TextView
        android:id="@+id/bn4c_tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="5.0"
        app:layout_constraintStart_toEndOf="@+id/bn4c_ratingbar"
        app:layout_constraintTop_toBottomOf="@+id/bn4c_tv_name" />

    <RatingBar
        android:id="@+id/bn4c_ratingbar"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/bn4c_tv_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bn4c_tv_rating" />

    <TextView
        android:id="@+id/bn4c_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="@+id/bn4c_tv_name"
        app:layout_constraintEnd_toStartOf="@+id/bn4c_btn_delete"
        app:layout_constraintStart_toEndOf="@+id/bn4c_tv_name"
        app:layout_constraintTop_toTopOf="@+id/bn4c_tv_name" />

    <TextView
        android:id="@+id/bn4c_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="DisplayName"
        android:textColor="@color/colorOrange2Dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>