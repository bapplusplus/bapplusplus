<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarVer1" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorBackground">@color/colorOrange2Primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#FF4000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeRst" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#FF4000</item>
    </style>

    <style name="AppThemeNew1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorOrange2Primary</item>
        <item name="colorPrimaryDark">@color/colorOrange2Dark</item>
        <item name="colorAccent">@color/colorOrange2Accent</item>
    </style>

    <style name="EditTextStyle1" parent="Widget.Design.TextInputLayout">

        <!--<item name="colorControlNormal">@color/colorOrange1</item>  // unFocus 상태일때 밑줄 색. -->
        <item name="boxStrokeColor">@color/colorOrange1</item> // Focus 상태일때 밑줄 색.
        <item name="android:textCursorDrawable">@color/colorOrange1</item>  // cursor 색.


        <!--<item name="android:textColorHint">@color/colorPrimary</item> --> // hint 색
        <item name="hintTextColor">@color/colorOrange1</item>   // floating hint 색

        <!-- <item name="helperText">@color/colorPrimary</item> // xml 에서 한 속성을 여기서도 할 수 있습니다.
        <item name="helperTextTextColor">@color/colorPrimary</item>

        <item name="errorTextColor">@color/colorPrimary</item> -->

    </style>

</resources>